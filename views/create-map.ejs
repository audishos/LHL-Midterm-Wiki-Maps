<!DOCTYPE html>
<html>

<head>
  <% include ./partials/_head %>
    <script src="/scripts/create-map.js"></script>
</head>

<body>
  <div id="container">
    <div id="main">

      <% include ./partials/_nav %>

      <div id="new-map-container" class="container">

        <div class="row">
          <div class="col-sm-8 offset-sm-2">
            <h1>Create a new map</h1>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-8 offset-sm-2">
            <form method="POST" action="/maps">
              <div class="formgroup">
                <label for="map_name">Name</label>
                <input id="map_name" type="text" class="form-control" name="map_name">
              </div>
              <div class="formgroup">
                <label for="description">Description</label>
                <textarea id="description" rows="10" class="form-control" name="description"></textarea>
              </div>
              <div class="formgroup">
                <button type="submit" class="btn btn-primary">
                Next
                <i class="fa fa-arrow-right" aria-hidden="true"></i>
                </button>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>
  <% include ./partials/_foot %>

</body>

</html>
